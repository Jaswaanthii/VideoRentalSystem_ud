@model IEnumerable<VideoRentalSystem.Models.Rental>
@{
    ViewBag.Title = "Rentals";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Rentals</h2>

<table id="rentals" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Customer Name</th>
            <th>
                Movie Title
            </th>
            <th>
                Date Rented
            </th>
            <th>Due Date</th>
        </tr>
    </thead>
    <tbody>
    </tbody>
</table>
@section scripts
{
    <script>
        $(document).ready(function () {

            var table = $("#rentals").DataTable({
                ajax: {
                    url: "/api/newrental",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "customer.name"
                    },
                    {
                        data: "movie.name"
                    },
                    {
                        data: "dateRented"
                    },
                    {
                        data: "dueDate"
                    },
                ]
            });
        });
    </script>
}

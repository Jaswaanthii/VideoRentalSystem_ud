@model IEnumerable<VideoRentalSystem.Models.Rental>

@{
    ViewBag.Title = "AllRentals";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>AllRentals</h2>

<p>
    @Html.ActionLink("New Rental", "New", "Rentals")
</p>
<table class="table table-bordered table-hover table-striped">
    <thead class="thead-dark">
        <tr>
            <th>Customer Name</th>
            <th>
                Movie Title
            </th>
            <th>
                Date Rented
            </th>
            <th>Due Date</th>
        </tr>
    </thead>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Customer.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Movie.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateRented)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DueDate)

            </td>


        </tr>
    }

</table>
